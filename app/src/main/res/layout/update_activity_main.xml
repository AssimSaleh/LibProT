<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.libpro.MainActivity">

    <Button
        android:id="@+id/home"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="400dp"
        android:drawableTop="@drawable/home"
        android:background="@drawable/background_1"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="20dp"/>


    <Button
        android:id="@+id/category"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="400dp"
        android:drawableTop="@drawable/category"
        android:background="@drawable/backgroung_2"
        android:text="category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"/>

    <Button
        android:id="@+id/setting"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="270dp"
        android:drawableTop="@drawable/setting"
        android:background="@drawable/backgroun_3"
        android:text="Setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="20dp"/>

    <Button
        android:id="@+id/upload"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="270dp"
        android:drawableTop="@drawable/upload"
        android:background="@drawable/bacground_4"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/bacground_5"
        android:drawableTop="@drawable/lock"
        android:paddingTop="20dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
